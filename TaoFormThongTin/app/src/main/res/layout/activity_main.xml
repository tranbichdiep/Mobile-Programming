<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Trường nhập MSSV -->
        <EditText
            android:id="@+id/etMSSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MSSV"
            android:inputType="text" />

        <!-- Trường nhập Họ tên -->
        <EditText
            android:id="@+id/etHoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ tên"
            android:inputType="textPersonName" />

        <!-- RadioGroup cho Giới tính -->
        <RadioGroup
            android:id="@+id/rgGioiTinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbNam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam" />

            <RadioButton
                android:id="@+id/rbNu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ" />
        </RadioGroup>

        <!-- Trường nhập Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <!-- Trường nhập Số điện thoại -->
        <EditText
            android:id="@+id/etSoDienThoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:inputType="phone" />

        <!-- Nút chọn Ngày sinh và CalendarView -->
        <Button
            android:id="@+id/btnChonNgaySinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn Ngày Sinh" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Spinner chọn Tỉnh/Thành -->
        <Spinner
            android:id="@+id/spinnerTinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- CheckBoxes cho sở thích -->
        <CheckBox
            android:id="@+id/cbTheThao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thể thao" />

        <CheckBox
            android:id="@+id/cbDienAnh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điện ảnh" />

        <CheckBox
            android:id="@+id/cbAmNhac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Âm nhạc" />

        <!-- CheckBox đồng ý với điều khoản -->
        <CheckBox
            android:id="@+id/cbDongY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đồng ý với các điều khoản" />

        <!-- Nút Submit -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />
    </LinearLayout>
</ScrollView>
