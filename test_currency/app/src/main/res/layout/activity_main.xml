<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Spinner
            android:id="@+id/currency_from_spinner"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/swap_button"
            android:layout_width="48dp" <!-- Thay 48dp bằng kích thước mong muốn -->
            android:layout_height="48dp"
            android:text="↔" />
        
        <Spinner
            android:id="@+id/currency_to_spinner"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" />
    </LinearLayout>

    <EditText
        android:autofillHints="username"

        android:id="@+id/amount_from_edittext"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/enter_amount"
        android:inputType="numberDecimal"
        android:importantForAutofill="yes" />

    <TextView
        android:id="@+id/result_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/result_textview_hint"
        android:textSize="18sp"
        android:paddingTop="16dp" />
</LinearLayout>
